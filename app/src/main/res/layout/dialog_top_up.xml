<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/grey_800"
            android:textSize="16sp"
            android:text="余额手动充值" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/tou" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="left|center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/grey_700"
            android:text="当前余额：600.0元"
            />

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/gray"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="left|center"
            android:text="输入充值金额"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/tou" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/btn_price_1"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                        <TextView
                            android:id="@+id/btn_price_2"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />


                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                        <TextView
                            android:id="@+id/btn_price_3"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/tou" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/btn_price_4"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />


                        <TextView
                            android:id="@+id/btn_price_5"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />


                        <TextView
                            android:id="@+id/btn_price_6"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/tou" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/btn_price_7"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />


                        <TextView
                            android:id="@+id/btn_price_8"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                        <TextView
                            android:id="@+id/btn_price_9"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="9"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/tou" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_count_00"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                        <TextView
                            android:id="@+id/btn_price_0"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />


                        <TextView
                            android:id="@+id/btn_price_point"
                            android:layout_width="68.33dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="."
                            android:textColor="@android:color/black"
                            android:textSize="18dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/tou" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/btn_price_del"
                            android:layout_width="match_parent"
                            android:layout_height="51.6dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/btn_price_clear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/buttonstyles"
                                android:gravity="center"
                                android:text="删除" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/tou" />

                        <TextView
                            android:id="@+id/btn_price_shoukuan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/buttonstyles"
                            android:gravity="center"
                            android:text="充值"
                            android:textSize="18dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>