<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tou">
        <!--沉浸式activity，这个view是用来占位的   -->
        <View
            android:id="@+id/position_view"
            android:layout_width="5px"
            android:layout_height="5px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/position_view"
        android:background="@color/tou">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/ic_fanghui" />


        <TextView
            android:id="@+id/members_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:text="添加商品"
            android:textSize="18sp"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="条形码"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bar_code"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_90"
            android:gravity="center|right"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入条形码(可以为空)"
            />

        <Button
            android:id="@+id/random_button"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:background="@drawable/buttonstyle"
            android:layout_toLeftOf="@+id/saomiao"
            android:text="随机"
            />

        <ImageView
            android:id="@+id/saomiao"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_saomiao"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="商品名称"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_name"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center|right"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入名称"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="零售价格："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_price"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center|right"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入价格"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="会员价格："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_vip_price"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center|right"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:background="@null"
            android:hint="输入会员价格"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="门店分类"
            android:textSize="16sp" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:id="@+id/g_fenlei"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/drop_down_unselected"
            android:text="商城分类"
            android:textSize="16sp" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_500"
            android:textSize="16sp"
            android:id="@+id/sc_fenlei"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mask_color"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/grey_600"
            android:text="门店上架"
            android:id="@+id/store_sj"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:text="商城上架"
            android:textColor="@color/grey_600"
            android:id="@+id/online_sj" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle"
            android:text="添加 " />

    </LinearLayout>

</LinearLayout>
